<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">

                <div class="card-body">
                    <h5 class="card-title">Přihlášení</h5>
                    <form action="/users/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Uživatelské jméno</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>

                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Heslo</label>
                            <input class="form-control" type="password" id="password" name="password" required>

                        </div>
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
