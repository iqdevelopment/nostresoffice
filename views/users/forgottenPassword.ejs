<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">

                <div class="card-body">
                    <h5 class="card-title">Resetování hesla</h5>
                    <form action="/users/forgot" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" autofocus required>

                        </div>

                        <button class="btn btn-success btn-block">Resetovat</button>
                    </form>
                </div>
                <div class="p-2">
                    <a class="dropdown-item" href="/users/register">Registrovat</a>
                </div>
            </div>

        </div>

    </div>

    <script src="/js/formValidation.js"></script>